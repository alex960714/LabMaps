<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:map="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.user.labmaps.MapsActivity" >


    <fragment android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="0dp"
              android:layout_height="0dp"
              app:layout_constraintBottom_toTopOf="@+id/newMarkerButton"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"/>

    <Button
            android:id="@+id/newMarkerButton"
            android:layout_width="180dp"
            android:layout_height="49dp"
            android:text="Add new label"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1" />

    <Button
            android:id="@+id/delMarkerButton"
            android:layout_width="180dp"
            android:layout_height="49dp"
            android:text="Delete Marker"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1" />


</android.support.constraint.ConstraintLayout>